<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity" tools:layout_editor_absoluteY="25dp">

    <EditText
            android:layout_width="399dp"
            android:layout_height="0dp"
            android:inputType="textPersonName"
            android:ems="10"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="4dp" android:id="@+id/editText1" android:hint="@string/phoneNoHint"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="55dp" android:layout_marginBottom="39dp"
            app:layout_constraintBottom_toTopOf="@+id/button1"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="54dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/editText2"
            android:hint="@string/getVerifyCode" android:layout_marginTop="39dp"
            app:layout_constraintTop_toBottomOf="@+id/editText1" app:layout_constraintEnd_toStartOf="@+id/button1"
            android:layout_marginBottom="37dp" app:layout_constraintBottom_toTopOf="@+id/button2"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="6dp" android:layout_marginEnd="13dp"/>
    <Button
            android:text="Button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/button1" android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/editText1" app:layout_constraintStart_toEndOf="@+id/editText2"
            android:layout_marginBottom="43dp" app:layout_constraintBottom_toTopOf="@+id/button2"
    />
    <Button
            android:text="NEW BUTTON"
            android:layout_width="233dp"
            android:layout_height="0dp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/button2" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/button1" android:layout_marginBottom="323dp"/>
</android.support.constraint.ConstraintLayout>