<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity" tools:layout_editor_absoluteY="81dp">

    <EditText
            android:layout_width="0dp" android:layout_height="41dp"
            android:id="@+id/email"
            android:layout_marginTop="71dp" app:layout_constraintTop_toBottomOf="@+id/name"
            app:layout_constraintStart_toEndOf="@+id/textView3" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="73dp" app:layout_constraintBottom_toBottomOf="@+id/insert"
            android:layout_marginEnd="66dp"/>
    <EditText
            android:layout_width="0dp" android:layout_height="41dp"
            android:id="@+id/nameQuery"
            app:layout_constraintStart_toEndOf="@+id/textView4" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="227dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginEnd="66dp"/>
    <EditText
            android:layout_width="0dp" android:layout_height="41dp"
            android:id="@+id/telephone"
            android:layout_marginTop="55dp" app:layout_constraintStart_toEndOf="@+id/textView"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginBottom="57dp"
            app:layout_constraintTop_toTopOf="@+id/name" app:layout_constraintBottom_toBottomOf="@+id/email"
            android:layout_marginEnd="66dp"/>
    <EditText
            android:layout_width="0dp" android:layout_height="41dp"
            android:id="@+id/name"
            android:layout_marginTop="64dp" app:layout_constraintStart_toEndOf="@+id/textView2"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginEnd="67dp"/>
    <TextView
            android:text="姓名:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView4"
            android:textSize="24sp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="67dp" app:layout_constraintBaseline_toBaselineOf="@+id/nameQuery"
            app:layout_constraintEnd_toStartOf="@+id/nameQuery" android:layout_marginEnd="20dp"
    />
    <TextView
            android:text="Email:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView3"
            android:textSize="24sp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="67dp"
            app:layout_constraintBaseline_toBaselineOf="@+id/email" app:layout_constraintEnd_toStartOf="@+id/email"
            android:layout_marginEnd="10dp"/>
    <TextView
            android:text="姓名:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView2"
            android:textSize="24sp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="67dp" app:layout_constraintBaseline_toBaselineOf="@+id/name"
            app:layout_constraintEnd_toStartOf="@+id/name" android:layout_marginEnd="20dp"
    />
    <TextView
            android:text="电话:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView"
            android:textSize="24sp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="67dp"
            app:layout_constraintBaseline_toBaselineOf="@+id/telephone"
            app:layout_constraintEnd_toStartOf="@+id/telephone" android:layout_marginEnd="20dp"
    />
    <Button
            android:text="插入"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/insert"
            app:layout_constraintStart_toStartOf="@+id/textView3" android:layout_marginBottom="45dp"
            app:layout_constraintBottom_toTopOf="@+id/nameQuery"/>
    <Button
            android:text="查询"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/query"
            app:layout_constraintStart_toStartOf="@+id/textView4" android:layout_marginTop="29dp"
            app:layout_constraintTop_toBottomOf="@+id/nameQuery"/>
</android.support.constraint.ConstraintLayout>